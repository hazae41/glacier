{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": [
      "dom",
      "ESNext"
    ],
    "jsx": "react",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "mods/*": [
        "mods/*"
      ],
      "libs/*": [
        "libs/*"
      ],
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/index.ts"
  ],
}