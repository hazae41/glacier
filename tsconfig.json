{
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "jsx": "react",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ],
}